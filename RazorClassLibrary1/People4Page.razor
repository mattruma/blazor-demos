@page "/people4"
@inject InheritedNamedHttpClientPersonService PersonService

<PageTitle>People4</PageTitle>

<Heading>People4</Heading>

@if (this.People == null)
{
    <p><em>Loading...</em></p>
    return;
}

<Div Margin=Margin.Is4.FromTop>
    <PeopleTableComponent People=@this.People />
</Div>

@code {
    private PersonList? People;

    protected override async Task OnInitializedAsync()
    {
        this.People = await PersonService.ListAsync();
    }
}
